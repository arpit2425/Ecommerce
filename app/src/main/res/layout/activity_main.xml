<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#404040"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/log"
            android:layout_margin="20dp"
            android:id="@+id/imageView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/user"
            android:layout_margin="20dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/log_phone" android:hint="Enter Phone Number"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/password"
            android:layout_margin="20dp"

            android:ems="10"
            android:id="@+id/log_pass" android:hint="Enter Password"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Login"
              android:textColor="#fff"
              android:textSize="30dp"
              android:gravity="center"
              android:background="#31a2e9"
              android:layout_marginRight="60dp"
              android:layout_marginLeft="60dp"
              android:padding="7dp" android:id="@+id/login"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Sign Up"
              android:textColor="#fff"
              android:textSize="30dp"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:background="#31a2e9"
              android:layout_marginRight="60dp"
              android:layout_marginLeft="60dp"
              android:padding="7dp" android:id="@+id/sign_but"/>
</LinearLayout>