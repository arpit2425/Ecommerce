<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#404040"
        android:orientation="vertical"
        tools:context=".registration">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/user"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edit_name" android:hint="Enter Name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:id="@+id/edit_email" android:hint="Enter Email"/>


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/user"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText" android:hint="Enter Phone Number"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/password"
            android:layout_marginLeft="20dp"
            android:hint="Address"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:id="@+id/editText3"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:id="@+id/editText2" android:hint="Enter Password"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:drawableRight="@drawable/password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:id="@+id/edit_confirm" android:hint="Confirm Password"/>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Sign Up"
              android:textColor="#fff"
              android:textSize="30dp"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:background="#31a2e9"
              android:layout_marginRight="60dp"
              android:layout_marginLeft="60dp"
              android:padding="7dp" android:id="@+id/sign"/>
</LinearLayout>